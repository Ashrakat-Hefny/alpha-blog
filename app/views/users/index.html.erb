<h1>Users listing page</h1>
<%= will_paginate @users, :container => false %>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Articles Count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= pluralize(user.articles.count, "article") %></td>
        <td><%= link_to 'Show', user_path(user)%></td>
        <td><%= link_to 'Edit', edit_user_path(user)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
